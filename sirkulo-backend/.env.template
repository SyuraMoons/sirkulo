# ===========================================
# SIRKULO BACKEND ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=sirkulo_user
DB_PASSWORD=your_database_password_here
DB_NAME=sirkulo_db
DB_SYNC=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration (GENERATE STRONG SECRETS!)
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_minimum_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Firebase Configuration (FROM FIREBASE CONSOLE)
FIREBASE_PROJECT_ID=sirkulo-c2459
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-fbsvc@sirkulo-c2459.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_ACTUAL_FIREBASE_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"

# Email Configuration (SendGrid)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=SG.your_actual_sendgrid_api_key_here
FROM_EMAIL=your_verified_email@gmail.com
FROM_NAME=Sirkulo Team

# Payment Configuration (Xendit)
XENDIT_SECRET_KEY=your_xendit_secret_key_here
XENDIT_WEBHOOK_TOKEN=your_xendit_webhook_token_here
XENDIT_PUBLIC_KEY=your_xendit_public_key_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads
MAX_FILES=10

# Frontend Configuration
FRONTEND_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001
VERIFICATION_PATH=/auth/verify
RESET_PASSWORD_PATH=/auth/reset-password

# Server Configuration
NODE_ENV=development
PORT=3000
